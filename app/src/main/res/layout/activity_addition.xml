<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="landscape"
    android:splitMotionEvents="false"
    android:id="@+id/activity_addition_relativelayout"
    tools:context="com.example.cassa.entrainementprojettut.AdditionActivity">

    <TextView
        android:id="@+id/activity_addition_affichage_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="50dp"
        android:layout_marginLeft="330dp"/>
    <TextView
        android:id="@+id/activity_addition_nombre1_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size"
        android:text="3"
        android:textStyle="bold"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="100dp"
        />

    <TextView
        android:id="@+id/activity_addition_nombre2_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size"
        android:textStyle="bold"
        android:text="5"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="300dp"/>

    <TextView
        android:id="@+id/activity_addition_operateur_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/activity_addition_nombre1_textview"
        android:layout_alignBottom="@+id/activity_addition_nombre1_textview"
        android:layout_alignEnd="@+id/activity_addition_rep2_btn"
        android:layout_alignRight="@+id/activity_addition_rep2_btn"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:text="TextView" />



    <Button
        android:background="#ff0000"
        android:id="@+id/activity_addition_rep1_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="50dp"></Button>

    <Button
        android:background="#00ff00"
        android:id="@+id/activity_addition_rep2_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="150dp"></Button>

    <Button

        android:background="#0000ff"
        android:id="@+id/activity_addition_rep3_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="250dp"></Button>

    <Button
        android:background="#ffff00"
        android:id="@+id/activity_addition_rep4_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="350dp"></Button>

    <ImageView
        android:id="@+id/acivity_addition_pos1_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <ImageView
        android:id="@+id/activity_addition_ordi_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/activity_addition_affichage_textview"
        app:srcCompat="@mipmap/ic_launcher_round" />




</RelativeLayout>