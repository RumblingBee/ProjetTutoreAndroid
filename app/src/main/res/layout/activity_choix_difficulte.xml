<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="landscape"
    android:splitMotionEvents="false"
    tools:context="com.example.cassa.entrainementprojettut.choixDifficulteActivity">

    <Button
        android:id="@+id/niveau1_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="119dp"
        android:text="1"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="130dp" />

    <Button
        android:id="@+id/niveau2_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/niveau1_btn"
        android:layout_alignBottom="@+id/niveau1_btn"
        android:layout_centerHorizontal="true"
        android:text="2"
        tools:layout_editor_absoluteX="225dp"
        tools:layout_editor_absoluteY="130dp" />

    <Button
        android:id="@+id/niveau3_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/niveau2_btn"
        android:layout_alignBottom="@+id/niveau2_btn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="47dp"
        android:layout_marginRight="47dp"
        android:text="3"
        tools:layout_editor_absoluteX="412dp"
        tools:layout_editor_absoluteY="130dp" />
</RelativeLayout>
