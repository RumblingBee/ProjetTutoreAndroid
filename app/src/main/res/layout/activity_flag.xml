<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_column="1"
    android:layout_row="2"
    tools:context="com.example.cassa.projetAndroid.FlagActivity"
    android:background="@color/orange">


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/activity_flag_name01-txt"
    android:text="Test"
    android:layout_row="0"
    android:layout_column="0"
    android:layout_gravity="center"
    android:textSize="25sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_flag_score-txt"
        android:text="Test"
        android:layout_marginLeft="10dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="center"
        android:textSize="25sp"/>


    <ImageView
        android:id="@+id/activity_flag_flag01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/allemagne"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="100dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/activity_flag_flag02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/albanie"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="100dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="center"/>




        <ImageView
            android:id="@+id/activity_flag_flag03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/allemagne"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="100dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/activity_flag_flag04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/albanie"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="100dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="center"/>



</GridLayout>
