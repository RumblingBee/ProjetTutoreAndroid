<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cassa.entrainementprojettut.ReverseFlagActivity"
    android:layout_column="1"
    android:layout_row="2">

    <ImageView
        android:id="@+id/activity_reverse_flag_drapeau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="center"
        app:srcCompat="@drawable/france"/>

    <TextView
        android:id="@+id/activity_reverse_flag_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:textSize="45sp"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/activity_reverse_flag_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pays 1"
        android:textSize="45sp"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/activity_reverse_flag_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pays 2"
        android:textSize="45sp"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/activity_reverse_flag_name3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pays 3"
        android:textSize="45sp"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/activity_reverse_flag_name4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pays 4"
        android:textSize="45sp"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

</GridLayout>
